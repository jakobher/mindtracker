<div class="max-w-6xl mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-md border border-warm-200 p-8 mb-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold mb-2 text-warm-800">Exponeringsövningar</h1>
          <p class="text-warm-600">Hantera dina exponeringsövningar här.</p>
        </div>
        <a href="<%= baseURL %>exposures/new" class="bg-warm-600 hover:bg-warm-700 text-white font-medium py-2 px-6 rounded-lg transition duration-300">
          Lägg till ny övning
        </a>
      </div>
    </div>
  
    <% if (exposures && exposures.length > 0) { %>
      <div class="bg-white rounded-xl shadow-md border border-warm-200 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-warm-200">
            <thead class="bg-warm-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-warm-700 uppercase tracking-wider">Titel</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-warm-700 uppercase tracking-wider">Plats</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-warm-700 uppercase tracking-wider">Datum</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-warm-700 uppercase tracking-wider">Ångestnivå</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-warm-700 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-warm-700 uppercase tracking-wider">Åtgärder</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-warm-100">
              <% exposures.forEach(exposure => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-warm-800"><%= exposure.title %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-warm-600"><%= exposure.location %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-warm-600"><%= new Date(exposure.date).toLocaleDateString() %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="relative w-24 h-3 bg-warm-100 rounded-full overflow-hidden">
                        <div class="absolute top-0 left-0 h-full rounded-full transition-all bg-gradient-to-r from-warm-400 to-warm-600
                        <%= exposure.expectedAnxiety === 0 ? 'w-0' : '' %>
                        <%= exposure.expectedAnxiety === 1 ? 'w-[10%]' : '' %>
                        <%= exposure.expectedAnxiety === 2 ? 'w-[20%]' : '' %>
                        <%= exposure.expectedAnxiety === 3 ? 'w-[30%]' : '' %>
                        <%= exposure.expectedAnxiety === 4 ? 'w-[40%]' : '' %>
                        <%= exposure.expectedAnxiety === 5 ? 'w-[50%]' : '' %>
                        <%= exposure.expectedAnxiety === 6 ? 'w-[60%]' : '' %>
                        <%= exposure.expectedAnxiety === 7 ? 'w-[70%]' : '' %>
                        <%= exposure.expectedAnxiety === 8 ? 'w-[80%]' : '' %>
                        <%= exposure.expectedAnxiety === 9 ? 'w-[90%]' : '' %>
                        <%= exposure.expectedAnxiety === 10 ? 'w-full' : '' %>
                        "></div>
                      <span class="ml-2 text-sm text-warm-600"><%= exposure.expectedAnxiety %>/10</span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (exposure.completed) { %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Genomförd</span>
                    <% } else { %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-warm-100 text-warm-800">Planerad</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a href="<%= baseURL %>exposures/<%= exposure.id %>" class="text-warm-600 hover:text-warm-900 mr-3">Visa</a>
                    <a href="<%= baseURL %>exposures/<%= exposure.id %>/edit" class="text-warm-600 hover:text-warm-900">Redigera</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <div class="text-center p-8 bg-white rounded-xl shadow-md border border-warm-200">
        <p class="text-warm-600 mb-4">Du har inga exponeringsövningar ännu.</p>
        <a href="<%= baseURL %>exposures/new" class="bg-warm-600 hover:bg-warm-700 text-white font-medium py-2 px-6 rounded-lg transition duration-300">
          Skapa din första övning
        </a>
      </div>
    <% } %>
  </div>